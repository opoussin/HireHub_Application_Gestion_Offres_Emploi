<!DOCTYPE html>
<html lang="fr">

<%- include('./includes/head')%>

<body>
<%- include('./components/navbar')%>
<div id="page-container">
    <div id="content-wrap">

            <div class="row d-flex flex-row justify-content-center">
                <div class="col-8 p-4 flex-column bg-white">
                    <h2 class="display-4" >Liste des candidats</h2>
                    <hr>

                    <% candidats.forEach((candidat) => { %>
                        <div class="card">
                            <div class="card-body">
                                <%console.log(candidat);%>
                                <h5 class="card-title"><%= candidat.nom %> <%= candidat.prenom %></h5>
                                <% if(candidat.etatC==1){%>
                                    Candidat accepté
                                <% }else if(candidat.etatC==2){%>
                                    Candidat refusé
                                <%}else{%>
                                   <a href="/recrut/listeCandidat/accept/<%=numero%>/<%=candidat.mail%>" class="btn btn-secondary ">Accepter</a>
                                   <a href="/recrut/listeCandidat/refuse/<%=numero%>/<%=candidat.mail%>" class="btn btn-secondary ">Refuser</a>
                                   <%}%>
                                <h6 class="card-subtitle mb-2 text-muted">Pièces de candidature :</h6>
                                <ul>
                                    <% candidat.pieces.forEach((piece) => { %>
                                        <li><a href="/candidature/getfile/<%= piece %>" target="_blank"><%= piece %></a></li>                   
                                    <% }) %>
                                </ul>
                            </div>
                        </div>
                    
                    <% }) %>
                </div>
            </div>
        
        
    </div>
    </div>
        
    <%- include('./components/footer')%>

</div>

</body>
</html>