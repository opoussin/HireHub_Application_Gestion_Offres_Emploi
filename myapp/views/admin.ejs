<!DOCTYPE html>
<html lang="fr">

<%- include('./includes/head')%>


    <body>
        <%- include('./components/navbar')%>
            <div id="page-container">
                <div id="content-wrap" class="">

                    <main>
                        <section>
                            <div class="container justify-content-center ">
                                <div class="row">
                                    <div class="col-3 border-end">

                                        <div class="row pb-4">
                                            <div class="container mt-4">
                                                <h1 class="display-6">Recherchez des utilisateurs</h1>
                                                <form class="form-inline d-flex flex-column align-items-start " action="/admin/administrateur" method="get">
                                                    <input type="text" class="form-control mb-2" id="mail" placeholder="...par mail" name="mail" value="<%= search.email %>">

                                                    <input type="text" class="form-control mb-2" id="nom" placeholder="...par nom" name="nom" value="<%= search.nom %>">

                                                    <input type="text" class="form-control mb-2" id="prenom" placeholder="...par prenom" name="prenom" value="<%= search.prenom %>">

                                                    <input type="date" class="form-control" id="date" placeholder="...par date d'inscription" name="date" value="<%= search.date %>">

                                                    <button class="btn btn-primary mt-3" type="submit">Valider</button>
                                                </form>

                                            </div>

                                        </div>

                                    </div>

                                    <div class="col-9 bg-white pt-4">
                                        <% if ((userResult.length> 0)&&(Array.isArray(userResult))) {%>
                                            <div class="row row-cols-3">
                                                <% userResult.forEach(function(user) { %>
                                                    <div class="col">

                                                        <div class="card m-2" style="width: 18rem;">
                                                            <div class="card-body">
                                                                <h5 class="card-title">
                                                                    <%= user.nom%>
                                                                    <%= user.prenom%>
                                                                </h5>
                                                                <h6 class="card-subtitle mb-2 text-body-secondary" name="mail">
                                                                    <%= user.mail%>
                                                                </h6>
                                                                <p class="card-text">
                                                                    <%= user.tel%>
                                                                </p>
                                                                <p class="card-text">Depuis le:
                                                                    <%=user.dateCreation.toLocaleDateString("fr") %>
                                                                </p>
                                                                <p>
                                                                    <%= (user.statut==1) ? "Actif" : "Inactif" %>
                                                                </p>
                                                                <p>Recruteur:
                                                                    <%= (user.type==2) ? "Oui" : "Non" %>
                                                                </p>
                                                                <p>Administrateur:
                                                                    <%= (user.type==3) ? "Oui" : "Non" %>
                                                                </p>

                                                                <%if(user.statut == 1){%>
                                                                    <a class="btn btn-outline-primary"
                                                                        href="/admin/administrateur/desactiver?user=<%=user.mail%>">Desactiver</a>
                                                                <%}else{%>
                                                                    <a class="btn btn-outline-success"
                                                                        href="/admin/administrateur/activer?user=<%=user.mail%>">Activer</a>
                                                                <%};%>
                                                                    <a class="btn border-none text-danger m-2"
                                                                        href="/admin/administrateur/supprimer?user=<%=user.mail%>">Supprimer</a>

                                                            </div>
                                                        </div>
                                                    </div>
                                                
                                                <% }); %>

                                            </div>


                                    </div>
                                </div>
                                <% } else { %>
                                    <p>Aucun utilisateur Ã  afficher.</p>
                                    <% }; %>







                            </div>
                        </section>

                    </main>


                </div>
                <%- include('./components/footer')%>

            </div>

    </body>

</html>