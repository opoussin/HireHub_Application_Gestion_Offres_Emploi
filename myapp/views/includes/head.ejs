    <script>
        document.addEventListener('DOMContentLoaded', function() {
          // Initialiser la modal lorsque la page est entièrement chargée
          var myModal = new bootstrap.Modal(document.getElementById('exampleModalLong'));
    
          // Obtenir une référence au bouton qui déclenche la modal
          var modalButton = document.getElementById('modalButton');
    
          // Ajouter un gestionnaire d'événement au clic sur le bouton
          modalButton.addEventListener('click', function() {
            // Afficher la modal
            myModal.show();
          });
        });
      </script>
