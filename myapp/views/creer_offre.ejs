<!DOCTYPE html>
<html lang="fr">

<%- include('./includes/head')%>

  <body>
    <%- include('./components/navbar')%>
      <div id="page-container">
        <div id="content-wrap" class="bg-light">

          

          <section>
            <div class=" d-flex justify-content-center">
              <div class="col-7 p-4 flex-column bg-white">
                <h1 class="display-4">Enregistrer une offre d'emploi</h1>
                <h10>Tout les champs sont obligatoires</h10>
                <hr>
                <form action="/recrut/creer_offre" method="post">
                  <% if (orgaResult && orgaResult.length > 0) { %>
                    
                    <div class="form-check d-flex flex-row gap-2">
                      <% orgaResult.forEach((orga) => { %>
                        <div class="d-block">
                            <input class="form-check-input" type="radio" name="siren" id="<%= orga.siren %>" value="<%= orga.siren %>">
                            <label class="form-check-label" for="<%= orga.siren %>">
                                <%= orga.nom %>
                            </label>
                        </div>
                        
                    <% }); %>
                    </div>
                <% } %>
                


                  <div class="mb-3 mt-3">

                    <label for="intitule">Intitule</label>
                    <input type="text" class="form-control" id="intitule" placeholder="Intitule" name="intitule" required>
                  </div>
                  <div class="mb-3">
                    <label for="statut">Statut</label>
                    <input type="text" class="form-control" id="statut" placeholder="Cadre, ETAM, Dirigeant, Ouvrier ou Stagiaire" name="statut" required>
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="responsable">Responsable</label>
                    <input type="text" class="form-control" id="responsable" placeholder="Responsable"
                      name="responsable" required>
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="type">Type</label>
                    <input type="text" class="form-control" id="type" placeholder="Type" name="type" required>
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="lieu">Lieu</label>
                    <input type="text" class="form-control" id="lieu" placeholder="Lieu" name="lieu" required>
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="rythme">Rythme</label>
                    <input type="number" class="form-control" id="rythme" placeholder="Entrez le rythme h/semaine"
                      name="rythme" required>
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="salaire">Salaire</label>
                    <input type="number" class="form-control" id="salaire"
                      placeholder="Entrez la rémunération en euros/mois" name="salaire" required>
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="description">Description</label>
                    <input type="comment" class="form-control" id="description" placeholder="Description"
                      name="description" required>
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="pieces">Pièces</label>
                    <input type="text" class="form-control" id="pieces" placeholder="CV, LM ..." name="pieces" required>
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="nombrePieces">Nombre de Pièces</label>
                    <input type="number" class="form-control" id="nombrePieces" placeholder="Nombre"
                      name="nombrePieces" required>
                  </div>
                  <label for="dateValidite">Date de validité de l'offre:</label>
                    <input type="dateValidite" id="dateValidite" name="dateValidite" placeholder="AAAA-MM-JJ" required >
                   
                  <div class="mb-3 mt-3">
                    <select class="form-select w-auto" name="etat" required>
                             
                      <option value="non publiee">Ne pas publier
                      </option>
                      <option value="publiee">Publier l'offre maintenant</option>

                  </select>
                    

                  </div>


                  <button type="submit" class="btn btn-primary">Valider</button>
                </form>
              </div>
            </div>

          </section>



      </div>
      <%- include('./components/footer')%>
  </body>

</html>