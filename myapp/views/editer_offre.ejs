<!DOCTYPE html>
<html lang="fr">

<%- include('./includes/head')%>

  <body>
    <%- include('./components/navbar')%>
      <div id="page-container">
        <div id="content-wrap" class="bg-light">

          

          <section>
            <div class=" d-flex justify-content-center">
              <div class="col-7 p-4 flex-column bg-white">
                <h1 class="display-4">Modifier une offre d'emploi</h1>
                <%console.log("numerooooooooooooooooooo2", numero);%>
                <hr>
                <form action="/recrut/editer_offre/<%=numero%>" method="post">
                  <div class="mb-3 mt-3">
                    <h5><%=orga.nom%></h5>                    
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="intitule">Intitule</label>
                    <input type="text" class="form-control" id="intitule" name="intitule" value="<%= offre.intitule %>">
                  </div>
                  <div class="mb-3">
                    <label for="statut">Statut</label>
                    <input type="text" class="form-control" id="statut" name="statut" value="<%= offre.statut%>">
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="responsable">Responsable</label>
                    <input type="text" class="form-control" id="responsable" 
                      name="responsable" value="<%=offre.responsable%>">
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="type">Type</label>
                    <input type="text" class="form-control" id="type" name="type" value="<%=offre.type%>">
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="lieu">Lieu</label>
                    <input type="text" class="form-control" id="lieu" name="lieu" value="<%=offre.lieu%>">
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="rythme">Rythme</label>
                    <input type="number" class="form-control" id="rythme" 
                      name="rythme" value="<%=offre.rythme%>">
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="salaire">Salaire</label>
                    <input type="number" class="form-control" id="salaire"
                      name="salaire" value="<%=offre.salaire%>">
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="description">Description</label>
                    <input type="comment" class="form-control" id="description" 
                      name="description" value="<%=offre.description%>">
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="pieces">Pièces</label>
                    <input type="text" class="form-control" id="pieces" name="pieces" value="<%=offre.pieces%>">
                  </div>

                  <div class="mb-3 mt-3">
                    <label for="nombrePieces">Nombre de Pièces</label>
                    <input type="number" class="form-control" id="nombrePieces" placeholder="Nombre"
                      name="nombrePieces" value="<%=offre.nombrePieces%>">
                  </div>
                  <label for="dateValidite">Date actuelle <%= offre.dateValidite.toLocaleDateString('fr')%>:</label>
                    <input hidden type="dateValidite" id="dateValidite1" name="dateValidite1" value="<%=offre.dateValidite%>" selected>
                    <input type="dateValidite" id="dateValidite2" name="dateValidite2" placeholder="AAAA-MM-JJ">

                   
                  <div class="mb-3 mt-3">
                    <h6>L'offre est actuellement <%=offre.etat%> </h6>
                    <label>
                      <input hidden type="radio" id = "default" name="etat" value= "<%=offre.etat%>" checked>

                      <input type="radio" id = "publiee" name="etat" value="publiee">
                      Publier l'offre maintenant
                    </label>
                    <br>
                    <label>
                      <input type="radio" id= "non publiee" name="etat" value="non publiee">
                      Remettre en brouillon
                    </label>
                    <br>
                    <label>
                      <input type="radio" id ="expiree" name="etat" value="expiree">
                      Archiver
                    </label>

                  </div>


                  <button type="submit" class="btn btn-primary">Valider</button>
                </form>
              </div>
            </div>

          </section>



      </div>
      <%- include('./components/footer')%>
  </body>

</html>