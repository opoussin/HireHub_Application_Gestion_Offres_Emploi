<!DOCTYPE html>
<html lang="fr">

<%- include('./includes/head')%>

<body>
<%- include('./components/navbar')%>
<div id="page-container">
    
    <div id="content-wrap">

        <main>
            <section class="py-4">
                <div class="row me-0 pe-1">
                    <div class="col-3 d-flex flex-column border-end align-items-start">

                        <div class="card w-auto ms-4">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= user.prenom %>
                                        <%= user.nom %>
                                </h5>
                            </div>
                            <ul class="list-group list-group-flush list-unstyled p-3">
                                <li class="">
                                    <%= user.mail %>
                                </li>
                                <li class="">
                                    <%= user.telephone %>
                                </li>
                                <li class='<%= (user.statut==1) ? "text-dark" : "text-danger" %>'>
                                    <%= (user.statut==1) ? "Actif" : "Inactif" %>
                                </li>

                                <li>Depuis le: <%= user.dateCreation.toLocaleDateString("fr") %>
                                </li>
                            </ul>


                        </div>
                        <div class="ms-4">
                            <a href="/users/modifier_profil" class="btn btn-secondary m-2 ">Modifier mon
                                profil</a> <br>
                            
                        </div>
                        

                    </div>
                    <div class="col-9 ">    
                        <h3>Bienvenue sur votre profil d'administrateur, <%=user.prenom%> </h1>
                    </div>
                </div>
            </div>
        </div>          
    </div>
        
    <%- include('./components/footer')%>

</div>

</body>
</html>